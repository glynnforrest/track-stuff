{% extends 'track-stuff:base.html.twig' %}

{% block content %}
  <div class="row">
    <div class="columns small-4">
      <h1>{{ goal.get('title') }}</h1>
      <table>
        <thead>
          <th>
            Date
          </th>
          <th>
            Amount
          </th>
          <th>
          </th>
        </thead>
        <tbody>
          {% for log in goal.get('logs') %}
            <tr>
              <td>
                {{ log.get('date')|date }}
              </td>
              <td>
                {{ log.get('amount') }}
              </td>
              <td>
                <a href="javascript:;">Edit</a>
              </td>
            </tr>
          {% endfor %}
          <tr>
            <td>
            </td>
            <td>
              {{ goal.get('total') }}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="columns small-8">
      <h2>{{goal.title}}</h2>
      <div class="panel">
        <div class="graph" id="graph-{{goal.slug}}"></div>
      </div>
    </div>
  </div>

{% endblock %}

{% block js %}
  {{ parent() }}

  <script type="text/javascript">
   var graph = new Morris.Line({
       element: 'graph-{{goal.slug}}',
       xkey: 'date',
       ykeys: ['total'],
       labels: ['Total']
   });

   $.ajax({
       url: '{{ route('track-stuff:graph-data', {goal: goal.id, type: 'line'}) }}',
       type: 'get',
       success: function (data) {
           graph.setData(data);
       },
       error: function (response) {
       }
   });

  </script>
{% endblock %}
